@model CRME.Models.Auditoria_Interna

@if (ViewBag.edit != 1)
{
    <div class="row margin-10">
        <div class="col l6 m6 s11 titlecircle">
            <b>Auditoria interna</b>
        </div>
        <div class="col l6 m6 s1 separator">
        </div>
    </div>
}
else
{
    <div class="row margin-10">
        <div class="col l6 m6 s11 titlecircle">
            <b>Editar Auditoria interna</b>
        </div>
        <div class="col l6 m6 s1 separator">
        </div>
    </div>
}

@using (Html.BeginForm("#", "#", FormMethod.Post, new { @class = "", id = "FrmProceso" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <!-- ----------------Datos personales---------------- -->
    <div class="row">
        <div class="col s12 m12 l12 input-field">
            <b class="">Empresa:</b>
            <div class="input-field margin-top-0">
                @if (Model.Em_Cve_Empresa == 0)
                {
                    @Html.DropDownListFor(model => model.Em_Cve_Empresa, new SelectList(ViewBag.tipodoc, "Value", "Text"), "-- Seleccione empresa --", htmlAttributes: new { @class = "select classic" })
                }
                else
                {
                    @Html.DropDownListFor(model => model.Em_Cve_Empresa, new SelectList(ViewBag.tipodoc, "Value", "Text"), "-- Seleccione empresa --", new { @class = "select classic" })
                }
                @Html.ValidationMessageFor(model => model.Em_Cve_Empresa, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m12 l12 input-field">
            <b class="">Certificación:</b>
            <div class="input-field margin-top-0">
                @Html.TextBoxFor(model => model.Certificacion, new { @class = "Validate form-simple", placeholder = "Ingrese el nombre del certificado", maxlength = 100, style = " !important;" })
                @Html.ValidationMessageFor(model => model.Certificacion, "", new { @class = "text-danger" })
                <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m4 l4 input-field">
            <b class="">Vigencia:</b>
            <div class="input-field margin-top-0">
                @Html.TextBoxFor(model => model.Vigencia, new { @class = "Validate form-simple", placeholder = "Ingrese la vigencia", maxlength = 100, style = " !important;" })
                @Html.ValidationMessageFor(model => model.Vigencia, "", new { @class = "text-danger" })
                <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
            </div>
        </div>
        <div class="col s12 m4 l4 input-field">
            <b class="">Fecha de la auditoría:</b>
            <div class="input-field margin-top-0">
                @Html.TextBoxFor(model => model.FechaAuditoria, new { @class = "Validate form-simple", placeholder = "Ingrese la fecha de auditoria", maxlength = 100, style = " !important;" })
                @Html.ValidationMessageFor(model => model.FechaAuditoria, "", new { @class = "text-danger" })
                <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
            </div>
        </div>
        <div class="col s12 m4 l4 input-field">
            <b class="">Informe de auditoría:</b>
            <div class="input-field margin-top-0">
                @Html.TextBoxFor(model => model.Informe, new { @class = "Validate form-simple", placeholder = "Ingrese el informe de auditoria", maxlength = 100, style = " !important;" })
                @Html.ValidationMessageFor(model => model.Informe, "", new { @class = "text-danger" })
                <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
            </div>
        </div>
    </div>
    

    <div class="row">

        <div class="col s12 m6 l6 input-field">
            <b class="">Resultado:</b>
            <div class="input-field margin-top-0">
                @Html.TextBoxFor(model => model.Resultado, new { @class = "Validate form-simple", placeholder = "Ingrese el resultado", maxlength = 100, style = " !important;" })
                @Html.ValidationMessageFor(model => model.Resultado, "", new { @class = "text-danger" })
                <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
            </div>
        </div>
        <div class="col s12 m6 l6 input-field">
            <b class="">Fecha próxima de auditoría:</b>
            <div class="input-field margin-top-0">
                @Html.TextBoxFor(model => model.FechaSigAudi, new { @class = "Validate form-simple", placeholder = "Ingrese la fecha próxima de auditoría", maxlength = 100, style = " !important;" })
                @Html.ValidationMessageFor(model => model.FechaSigAudi, "", new { @class = "text-danger" })
                <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="col s12 m12 l12">
                    <div class="row margin-0">
                        <div class="col s12 m12 l7 file-field input-field">
                            <div class="btn light-blue darken-4">
                                <i class="mdi mdi-folder-open"></i> EXAMINAR
                                <input type="file" id="fileInputArchivo" accept=".pdf">
                            </div>
                            <div class="file-path-wrapper">
                                <input id="nbArchivo" class="file-path validate" type="text">
                            </div>
                        </div>
                        <div class="input-field margin-top-0">
                            <input id="ruta" class="file-path validate" type="hidden">

                        </div>
                        <div class="col s12 m12 l3 input-field">
                            <button type="button" class="btn light-blue darken-4 btn-block" id="CargarArchivo"><i class="mdi mdi-cloud-upload load-icon"></i> CARGAR</button>
                        </div>
                        <div class="col s12 m12 l2 input-field">
                            <div class="loading loading-subir">
                                <div class="row center">
                                    @*   @Html.Image("~/Upload/Sistema/Loading_02.gif", "Loading", new { @class = "responsive-img center loading-size" })*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <label id="mensaje-error-model" class="text-danger" style="font-size:15px"></label>
        </div>
    </div>
    <!-- ---------------Botones---------------- -->
    <!--<div class="row">
        <div class="col l12 m12 s12">
            <div class="row">
                <div class="col l12  m12 s12 left-align">
                    <a class="btn green darken-4 waves-effect" style="cursor:pointer;" id="agregaevi"><i class="mdi mdi-plus-box-multiple hide-on-small-and-down"></i> Agregar evidencia</a>-->
    @*<button type="submit" class="btn green darken-4 waves-effect agregaevi" style="margin-left: 10px"><i class="mdi mdi-plus-box-multiple hide-on-small-and-down"></i> Agregar evidencia</button>*@
    <!--</div>
            </div>
        </div>
    </div>-->
    <!-- ---------------Botones---------------- -->
    <div class="row">
        <div class="col l12 m12 s12">
            <div class="row">
                <div class="col push-l6 l6 push-m4 m8 s12 right-align">
                    <a class="btn red darken-4 waves-effect" href="@Url.Action("Index", "AuditoriaView")"><i class="mdi mdi-close hide-on-small-and-down"></i> Cancelar</a>
                    <button type="submit" class="btn blue darken-4 waves-effect guardarProceso" style="margin-left: 10px"><i class="mdi mdi-content-save hide-on-small-and-down"></i> Guardar</button>
                </div>
            </div>
        </div>
    </div>

}

