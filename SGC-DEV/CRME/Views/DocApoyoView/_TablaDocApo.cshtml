@using PagedList.Mvc
@model PagedList.IPagedList<CRME.Models.Doc_apoyo>
@{
    CRME.Models.SIRE_Context db = new CRME.Models.SIRE_Context();
}

<div class="row margin-10">
    <div class="col l6 m6 s11 titlecircle">
        <b>Lista de procesos</b>
    </div>
    <div class="col l6 m6 s1 separator">
    </div>
</div>

@if (Auth.Usuario.perfil_ID == 6)
{
    <div class="row">
        <div class="col s12 m4 l4 input-field">
            <a class="btn light-blue darken-4 waves-effect nuevores white-text" href="@Url.Action("Agregarda","DocApoyoView")"><i class="mdi mdi-plus"></i> Agregar Nuevo</a>
        </div>
    </div>
}

<div id="TablaDocApo">
    <div class="row">
        <div class="col l12 m12 s12">
            <table class="striped highlight light-blue">
                <thead class="table-header-blue">
                    <tr class="table-header-tr-blue">
                        <td class="center">Documento</td>
                        @if (Auth.Usuario.perfil_ID == 6 || Auth.Usuario.perfil_ID == 1) 
                        { 
                         <td class="center">Opciones</td>
                        }
                    </tr>
                </thead>
                <tbody class="table-body-blue">
                    @if (Model.Count == 0)
                    {
                        <tr class="table-body">
                            <td colspan="2" class="center">
                                <b>No se encontraron coincidencias</b>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {

                            <tr class="table-body">
                                <td class="center"><a href="@item.Ruta_doc.Replace("~","")" class="documento" data-position="bottom" data-delay="50" title="documento" data-tooltip="documento" style="cursor: pointer; text-transform: uppercase; color: black;" id-vend="">@Html.DisplayFor(modelItem => item.Nombre_doc)</a>&nbsp;&nbsp;</td>
                                @*BOTON PARA EDITAR*@

                            @if (Auth.Usuario.perfil_ID == 6 || Auth.Usuario.perfil_ID == 1)
                            {
                            <td class="center">
                                <a href="#ancla" class="editarEmpresa" data-position="bottom" data-delay="50" title="Editar" data-tooltip="Editar" style="cursor:pointer;" id-item="@item.Id_doc" id-vend=""><i class="mdi mdi-pencil mdi-24px yellow-text"></i></a>&nbsp;&nbsp;
                                <a class="eliminarEmpresa" data-position="bottom" data-delay="50" title="Eliminar" style="cursor:pointer;" id-item="@item.Id_doc" id-vend=""><i class="mdi mdi-close-outline mdi-24px red-text"></i></a>
                            </td>
                            }

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col s12 center-align">
            @if (Model != null)
            {
                @Html.PagedListPager(Model, page => Url.Action("_TablaLineas", new { page })
                    , PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions()
                    {
                        Display = PagedListDisplayMode.IfNeeded,
                        DisplayPageCountAndCurrentLocation = true,
                        DisplayItemSliceAndTotal = false,
                        PageCountAndCurrentLocationFormat = "Página {0} de {1}.",
                        ItemSliceAndTotalFormat = "Mostrando los elementos {0} a {1} de {2}.",
                        LinkToIndividualPageFormat = "{0}",
                    }, new AjaxOptions()
                    {
                        HttpMethod = "POST",
                        UpdateTargetId = "TablaIndicadores",
                        OnComplete = "FltOnCompletePer",
                        OnBegin = "FltOnBeginPer"
                    }
                )
            )
            }
        </div>
    </div>
</div>
